<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent_blue"
    android:fitsSystemWindows="true"
    tools:context=".Splash_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo/Icon with White Color -->
        <ImageView
            android:id="@+id/logoView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="EduWay Logo"
            android:src="@drawable/imag5" />

        <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EduWay"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Tagline in Light Blue -->
        <TextView
            android:id="@+id/taglineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart College Bus Tracking"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="48dp" />

        <!-- Loading Progress in White -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:progressBackgroundTint="@color/white" />

        <!-- Version/Bottom Text in Light Blue -->
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>